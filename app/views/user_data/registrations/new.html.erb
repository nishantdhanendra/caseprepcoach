<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <div class="form-group">
            <% user_id_was_invalid = resource.errors.include?(:user_id) %>

            <% user_id_class = "form-control" %>

            <% if was_validated %>
              <% if user_id_was_invalid %>
                <% user_id_class << " is-invalid" %>
              <% else %>
                <% user_id_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_id %>

            <%= f.number_field :user_id, :class => user_id_class, :placeholder => "Enter user id" %>

            <% if user_id_was_invalid %>
              <% resource.errors.full_messages_for(:user_id).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% user_name_was_invalid = resource.errors.include?(:user_name) %>

            <% user_name_class = "form-control" %>

            <% if was_validated %>
              <% if user_name_was_invalid %>
                <% user_name_class << " is-invalid" %>
              <% else %>
                <% user_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_name %>

            <%= f.text_field :user_name, :class => user_name_class, :placeholder => "Enter user name" %>

            <% if user_name_was_invalid %>
              <% resource.errors.full_messages_for(:user_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% user_goal_was_invalid = resource.errors.include?(:user_goal) %>

            <% user_goal_class = "form-control" %>

            <% if was_validated %>
              <% if user_goal_was_invalid %>
                <% user_goal_class << " is-invalid" %>
              <% else %>
                <% user_goal_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_goal %>

            <%= f.text_field :user_goal, :class => user_goal_class, :placeholder => "Enter user goal" %>

            <% if user_goal_was_invalid %>
              <% resource.errors.full_messages_for(:user_goal).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% self_assessment_score_was_invalid = resource.errors.include?(:self_assessment_score) %>

            <% self_assessment_score_class = "form-control" %>

            <% if was_validated %>
              <% if self_assessment_score_was_invalid %>
                <% self_assessment_score_class << " is-invalid" %>
              <% else %>
                <% self_assessment_score_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :self_assessment_score %>

            <%= f.number_field :self_assessment_score, :class => self_assessment_score_class, :placeholder => "Enter self assessment score" %>

            <% if self_assessment_score_was_invalid %>
              <% resource.errors.full_messages_for(:self_assessment_score).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "user_data/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
